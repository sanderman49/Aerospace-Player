<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AerospacePlayer.ViewModels"
             xmlns:System="using:System"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
             Loaded="OnViewLoad"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AerospacePlayer.Views.MainView"
             x:DataType="vm:MainViewModel">
        <UserControl.Styles>
                <Style Selector="Button.Key">
                        <Setter Property="Width" Value="{OnFormFactor Desktop=125.0, Mobile=100.0, x:TypeArguments=System:Double}"/>
                        <Setter Property="Height" Value="{OnFormFactor Desktop=125.0, Mobile=100.0, x:TypeArguments=System:Double}"/>
                        <Setter Property="Margin" Value="8"/>
                        <Setter Property="Background" Value="transparent"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="CornerRadius" Value="8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="{OnFormFactor Desktop=64, Mobile=46, x:TypeArguments=System:Double}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Command" Value="{Binding Play}"/>
                </Style>
        </UserControl.Styles>
        <DockPanel VerticalAlignment="Stretch">
                <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Right">
                        <Button x:Name="SettingsButton" Command="{Binding GoToSettings}" IsEnabled="True">Settings</Button>
                </StackPanel>
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Label VerticalAlignment="Center"
                               HorizontalAlignment="Center">Patch</Label>
                        <ComboBox x:Name="patchBox"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  SelectedIndex="0"
                                  ItemsSource="{Binding Patches}"
                                  SelectedValue="{Binding Patch}">
                        </ComboBox>
                        
                        <Label VerticalAlignment="Center"
                               HorizontalAlignment="Center">Scale</Label>
                        <ComboBox x:Name="scaleBox"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  SelectedIndex="0"
                                  ItemsSource="{Binding Scales}"
                                  SelectedValue="{Binding Scale}">
                        </ComboBox>
                        
                        <Grid VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              ColumnDefinitions="1*,1*,1*"
                              RowDefinitions="*,*,*,*">
                                <Button Grid.Column="0"
                                        Grid.Row="0"
                                        Opacity="{Binding Opacities[0]}"
                                        CommandParameter="C"
                                        Classes="Key"
                                        x:Name="CButton">C</Button>
                                <Button Grid.Column="1"
                                        Grid.Row="0"
                                        Opacity="{Binding Opacities[1]}"
                                        CommandParameter="C#"
                                        Classes="Key"
                                        x:Name="CSButton">C#</Button>
                                <Button Grid.Column="2"
                                        Grid.Row="0"
                                        Opacity="{Binding Opacities[2]}"
                                        CommandParameter="D"
                                        Classes="Key"
                                        x:Name="DButton">D</Button>
                                <Button Grid.Column="0"
                                        Grid.Row="1"
                                        Opacity="{Binding Opacities[3]}"
                                        CommandParameter="D#"
                                        Classes="Key"
                                        x:Name="DSButton">D#</Button>
                                <Button Grid.Column="1"
                                        Grid.Row="1"
                                        Opacity="{Binding Opacities[4]}"
                                        CommandParameter="E"
                                        Classes="Key"
                                        x:Name="EButton">E</Button>
                                <Button Grid.Column="2"
                                        Grid.Row="1"
                                        Opacity="{Binding Opacities[5]}"
                                        CommandParameter="F"
                                        Classes="Key"
                                        x:Name="FButton">F</Button>
                                <Button Grid.Column="0"
                                        Grid.Row="2"
                                        Opacity="{Binding Opacities[6]}"
                                        CommandParameter="F#"
                                        Classes="Key"
                                        x:Name="FSButton">F#</Button>
                                <Button Grid.Column="1"
                                        Grid.Row="2"
                                        Opacity="{Binding Opacities[7]}"
                                        CommandParameter="G"
                                        Classes="Key"
                                        x:Name="GButton">G</Button>
                                <Button Grid.Column="2"
                                        Grid.Row="2"
                                        Opacity="{Binding Opacities[8]}"
                                        CommandParameter="G#"
                                        Classes="Key"
                                        x:Name="GSButton">G#</Button>
                                <Button Grid.Column="0"
                                        Grid.Row="3"
                                        Opacity="{Binding Opacities[9]}"
                                        CommandParameter="A"
                                        Classes="Key"
                                        x:Name="AButton">A</Button>
                                <Button Grid.Column="1"
                                        Grid.Row="3"
                                        Opacity="{Binding Opacities[10]}"
                                        CommandParameter="A#"
                                        Classes="Key"
                                        x:Name="ASButton">A#</Button>
                                <Button Grid.Column="2"
                                        Grid.Row="3"
                                        Opacity="{Binding Opacities[11]}"
                                        CommandParameter="B"
                                        Classes="Key"
                                        x:Name="BButton">B</Button>
                        </Grid>
                </StackPanel>
        </DockPanel>
</UserControl>
