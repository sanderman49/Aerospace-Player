<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AerospacePlayer.ViewModels"
             xmlns:rxui="using:Avalonia.ReactiveUI"
             x:Class="AerospacePlayer.Views.ShellView"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
             x:DataType="vm:ShellViewModel">
    
    <Grid RowDefinitions="*,50">
        <rxui:RoutedViewHost Router="{Binding Router}"
                             Grid.Row="0"/>
        
        <StackPanel HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    IsVisible="{Binding Router.CurrentViewModel}"
                    Grid.Row="1">
                <TabStrip HorizontalAlignment="Stretch">
                    <TabStrip.Styles>
                        <Style Selector="TabStrip">
                            <Setter Property="ItemsPanel">
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding $parent[TabStrip].Items.Count}"/>
                                </ItemsPanelTemplate>
                            </Setter>
                        </Style>
                    </TabStrip.Styles>                    
                    <TabItem HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" x:Name="MainTab" Header="Main"></TabItem>
                    <TabItem HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" x:Name="ProgramsTab" Header="Programs"></TabItem>
                    
                    <i:Interaction.Behaviors>
                        <ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #MainTab}">
                            <ia:InvokeCommandAction Command="{Binding GoToMain}"/>
                        </ia:EventTriggerBehavior>
                        
                        <ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #ProgramsTab}">
                            <ia:InvokeCommandAction Command="{Binding GoToPrograms}"/>
                        </ia:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </TabStrip>
        </StackPanel>
    </Grid>
</UserControl>
